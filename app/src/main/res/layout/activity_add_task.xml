<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back_button"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_task_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Task Title Input -->
            <EditText
                android:id="@+id/etTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_border"
                android:hint="@string/task_title_hint"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Task Description Input -->
            <EditText
                android:id="@+id/etTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_border"
                android:hint="@string/task_description_hint"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Group Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/group_label"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvAddGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_new_group"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Group Spinner -->
            <Spinner
                android:id="@+id/spinnerGroup"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_border"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp"
                android:popupBackground="@color/border_gray" />

            <!-- Deadline Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deadline_label"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Deadline Input -->
            <LinearLayout
                android:id="@+id/layoutDeadline"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_border"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvDeadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/deadline_placeholder"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/white"
                    android:contentDescription="@string/calendar_icon" />

            </LinearLayout>

            <!-- Reminder Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminder_label"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Reminder Options -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true"
                app:chipSpacingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_none"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/border_gray"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip5p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_5p"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/border_gray"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip10p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_10p"
                    android:textColor="@color/black"
                    app:chipBackgroundColor="#CCAA00"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip1h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_1h"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/border_gray"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_custom"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/border_gray"
                    app:chipStrokeWidth="0dp" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Priority Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_label"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Priority Options -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true"
                app:chipSpacingHorizontal="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/priority_low"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/border_gray"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/priority_medium"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/border_gray"
                    app:chipStrokeWidth="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/priority_high"
                    android:textColor="@color/black"
                    app:chipBackgroundColor="#CCAA00"
                    app:chipStrokeWidth="0dp" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Color Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_label"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Color Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="24dp">

                <View
                    android:id="@+id/colorYellow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#CCDD22"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorGreen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#66DD66"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorTeal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#22DDBB"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorBlue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#4499DD"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorLightBlue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#44BBEE"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorOrange"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#EE9944"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorPurple"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#BB66DD"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <View
                    android:id="@+id/colorPink"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_color_circle"
                    android:backgroundTint="#EE5599"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/cancel_button"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_transparent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/create_button"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_primary"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>